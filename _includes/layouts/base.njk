<!doctype html>
<!-- Current page: {{ page.url | url }} -->
<html lang="en" dir="ltr" style="--static:url(../img/src/static.gif);--portrait:url(../img/src/bg.jpg);">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="canonical" href="{{ page.url or metadata.canonical | url }}">
    <!-- OpenGraph -->
    <meta property="og:type" content="{{ type or 'website' }}">
    <meta property="og:url" content="{{ page.url | url }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:image" content="{{ thumb or metadata.image.thumb }}">
    <meta property="og:image:alt" content="{{ thumbAlt or metadata.image.alt }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:site_name" content="{{ metadata.siteName }}">
    <meta property="og:locale" content="en_GB">
    <!-- Twitter cards -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="{{ metadata.social.twitter }}">
    <meta name="twitter:creator" content="{{ authorTwitter or metadata.author.twitter }}">
    <meta name="twitter:title" content="{{ title or metadata.title }}">
    <meta name="twitter:description" content="{{ description or metadata.description }}">
    <meta name="twitter:image" content="{{ thumb or metadata.image.thumb }}">
    <meta name="twitter:image:alt" content="{{ thumbAlt or metadata.image.alt }}">
    <!-- Pinterest -->
    <meta name="p:domain_verify" content="{{ metadata.social.pinterestClaim}}"/>
    <!-- Localised versions -->
    <link rel="alternate" href="{{ page.url or metadata.canonical | url }}" hreflang="x-default"/>
    <!-- Favicons et al -->
    <link rel="apple-touch-icon" sizes="180x180" href="img/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="img/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="img/favicon/favicon-16x16.png">
    <link rel="manifest" href="img/favicon/site.webmanifest">
    <meta name="apple-mobile-web-app-title" content="Tylen St Hilaire">
    <meta name="apple-mobile-web-app-capable" content="no">
    <meta name="apple-mobile-web-app-status-bar-style" content="translucent-black">
    <meta name="application-name" content="Tylen St Hilaire">
    <meta name="msapplication-config" content="img/favicon/browserconfig.xml"/>
    <meta name="msapplication-TileColor" content="#c4662f">
    <meta name="theme-color" content="#ffffff">
    <!-- Feeds -->
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <!-- Preconnect hints -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://googletagmanager.com">
    <!-- Styles -->
    <link rel="preload" as="style" href="{{ '/css/critical.css' | url }}">
    <link rel="preload" as="style" href="{{ '/css/main.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}" media="print" onload="this.onload=null;this.removeAttribute('media');">
    <noscript>
      <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    </noscript>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital@0;1&display=swap" rel="stylesheet">
    <!-- Local scripts -->
    <script async="async" src="{{ '/js/main.js' | url }}"></script>
    <!-- Analytics scripts -->
    <script defer="defer" src="{{ '/js/gtm.js | url' }}"></script>
    <!-- contains formerly-inline snippet -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id={{ metadata.analytics.gtm }}" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
  </head>
  <body>
    <main id="content" {% if templateClass %} class="{{ templateClass }}" {% endif %}>
      {{ content | safe }}
    </main>
    <header class="c-masthead">
      <hr>
      <nav>
        <h2>Navigation menu</h2>
        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav">
          <li>
            <a href="{{ '/' | url }}">Home</a>
          </li>
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}" {% if entry.url == page.url %} aria-current="page" {% endif %}>
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </nav>
    </header>
    <footer class="c-footer">
      <div class="o-col12">
        <hr class="u-visually-hidden">
        <h2 class="u-visually-hidden">P.S.</h2>
        <p class="c-footer__strapline">User Experience<span class="u-visually-hidden">,</span>
          <span class="u-bullet-comma">Visual Design</span><span class="u-visually-hidden">,</span>
          <span class="u-bullet-comma">Content Strategy</span></p>
        <p class="footer__contact">
          <span class="u-color-primary">Let's talk:</span>
          <a href="mailto:hello@tylensthilaire.com">hello@tylensthilaire.com</a>
        </p>
      </div>
    </footer>
  </body>
</html>